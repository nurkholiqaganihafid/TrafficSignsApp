            <com.skydoves.expandablelayout.ExpandableLayout
                android:id="@+id/expandable_pasal281"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:expandable_duration="300"
                app:expandable_isExpanded="false"
                app:expandable_parentLayout="@layout/four_expandable_parent"
                app:expandable_secondLayout="@layout/four_expandable_desc"
                app:expandable_showSpinner="true"
                app:expandable_spinner="@drawable/ic_baseline_keyboard_arrow_down_24"
                app:expandable_spinner_animate="true"
                app:expandable_spinner_gravity="end"
                app:expandable_spinner_margin="14dp"
                app:expandable_spinner_size="32dp" />

            <View
                android:id="@+id/border_line5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="@color/gray_border_line"
                app:layout_constraintTop_toBottomOf="@id/expandable_pasal281" />

            <com.skydoves.expandablelayout.ExpandableLayout
                android:id="@+id/expandable_pasal282"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:expandable_duration="300"
                app:expandable_isExpanded="false"
                app:expandable_parentLayout="@layout/five_expandable_parent"
                app:expandable_secondLayout="@layout/five_expandable_desc"
                app:expandable_showSpinner="true"
                app:expandable_spinner="@drawable/ic_baseline_keyboard_arrow_down_24"
                app:expandable_spinner_animate="true"
                app:expandable_spinner_gravity="end"
                app:expandable_spinner_margin="14dp"
                app:expandable_spinner_size="32dp" />

            <View
                android:id="@+id/border_line6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="@color/gray_border_line"
                app:layout_constraintTop_toBottomOf="@id/expandable_pasal282" />

            <com.skydoves.expandablelayout.ExpandableLayout
                android:id="@+id/expandable_pasal283"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:expandable_duration="300"
                app:expandable_isExpanded="false"
                app:expandable_parentLayout="@layout/six_expandable_parent"
                app:expandable_secondLayout="@layout/six_expandable_desc"
                app:expandable_showSpinner="true"
                app:expandable_spinner="@drawable/ic_baseline_keyboard_arrow_down_24"
                app:expandable_spinner_animate="true"
                app:expandable_spinner_gravity="end"
                app:expandable_spinner_margin="14dp"
                app:expandable_spinner_size="32dp" />

            <View
                android:id="@+id/border_line7"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="@color/gray_border_line"
                app:layout_constraintTop_toBottomOf="@id/expandable_pasal283" />

            <com.skydoves.expandablelayout.ExpandableLayout
                android:id="@+id/expandable_pasal284"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:expandable_duration="300"
                app:expandable_isExpanded="false"
                app:expandable_parentLayout="@layout/seven_expandable_parent"
                app:expandable_secondLayout="@layout/seven_expandable_desc"
                app:expandable_showSpinner="true"
                app:expandable_spinner="@drawable/ic_baseline_keyboard_arrow_down_24"
                app:expandable_spinner_animate="true"
                app:expandable_spinner_gravity="end"
                app:expandable_spinner_margin="14dp"
                app:expandable_spinner_size="32dp" />

            <View
                android:id="@+id/border_line8"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="@color/gray_border_line"
                app:layout_constraintTop_toBottomOf="@id/expandable_pasal284" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>