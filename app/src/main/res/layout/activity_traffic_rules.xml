<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_primary"
    tools:context=".TrafficRulesActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/bar_layout_rules"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24">

        <TextView
            style="@style/Toolbar.TitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aturan Lalu Lintas" />
    </androidx.appcompat.widget.Toolbar>

    <View
        android:id="@+id/border_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_border_line"
        app:layout_constraintTop_toBottomOf="@+id/bar_layout_rules" />

    <TextView
        android:id="@+id/title_rules"
        style="@style/textFontExpandableStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:text="UU Nomor 22 Tahun 2009"
        app:layout_constraintBottom_toTopOf="@+id/scroll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/border_line" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <com.skydoves.expandablelayout.ExpandableLayout
                android:id="@+id/expandable_pasal278"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:expandable_duration="300"
                app:expandable_isExpanded="false"
                app:expandable_parentLayout="@layout/one_expandable_parent"
                app:expandable_secondLayout="@layout/one_expandable_desc"
                app:expandable_showSpinner="true"
                app:expandable_spinner="@drawable/ic_baseline_keyboard_arrow_down_24"
                app:expandable_spinner_animate="true"
                app:expandable_spinner_gravity="end"
                app:expandable_spinner_margin="14dp"
                app:expandable_spinner_size="32dp" />

            <View
                android:id="@+id/border_line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="@color/gray_border_line"
                app:layout_constraintTop_toBottomOf="@id/expandable_pasal278" />

            <com.skydoves.expandablelayout.ExpandableLayout
                android:id="@+id/expandable_pasal279"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:expandable_duration="300"
                app:expandable_isExpanded="false"
                app:expandable_parentLayout="@layout/two_expandable_parent"
                app:expandable_secondLayout="@layout/two_expandable_desc"
                app:expandable_showSpinner="true"
                app:expandable_spinner="@drawable/ic_baseline_keyboard_arrow_down_24"
                app:expandable_spinner_animate="true"
                app:expandable_spinner_gravity="end"
                app:expandable_spinner_margin="14dp"
                app:expandable_spinner_size="32dp" />

            <View
                android:id="@+id/border_line3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="@color/gray_border_line"
                app:layout_constraintTop_toBottomOf="@id/expandable_pasal279" />

            <com.skydoves.expandablelayout.ExpandableLayout
                android:id="@+id/expandable_pasal280"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:expandable_duration="300"
                app:expandable_isExpanded="false"
                app:expandable_parentLayout="@layout/three_expandable_parent"
                app:expandable_secondLayout="@layout/three_expandable_desc"
                app:expandable_showSpinner="true"
                app:expandable_spinner="@drawable/ic_baseline_keyboard_arrow_down_24"
                app:expandable_spinner_animate="true"
                app:expandable_spinner_gravity="end"
                app:expandable_spinner_margin="14dp"
                app:expandable_spinner_size="32dp" />

            <View
                android:id="@+id/border_line4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
