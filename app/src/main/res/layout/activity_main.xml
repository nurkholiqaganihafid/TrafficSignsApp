<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_primary"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="218dp"
        android:layout_height="218dp"
        android:layout_marginTop="39dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_sign_type"
        style="@style/btnFontStyle"
        android:layout_width="175dp"
        android:layout_height="55dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_bg"
        android:text="Jenis Rambu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_rule"
        style="@style/btnFontStyle"
        android:layout_width="175dp"
        android:layout_height="55dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_bg"
        android:text="@string/aturan_lalu_lintas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_sign_type" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_games"
        style="@style/btnFontStyle"
        android:layout_width="175dp"
        android:layout_height="55dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_bg"
        android:text="Games"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_rule" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_scan"
        style="@style/btnFontStyle"
        android:layout_width="175dp"
        android:layout_height="55dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_bg"
        android:text="Scan Image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_games" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_exit"
        style="@style/btnExitFontStyle"
        android:layout_width="115dp"
        android:layout_height="55dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn_exit_bg"
        android:text="Keluar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_scan" />

</androidx.constraintlayout.widget.ConstraintLayout>